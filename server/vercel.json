{
    "version": 2,
    "builds": [
        {
            "src": "server/src/routes/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "server/src/server.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/user/(.*)",
            "dest": "/server/src/routes/userRoute.ts"
        },
        {
            "src": "/api/m/(.*)",
            "dest": "/server/src/routes/messageRoute.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/server/src/server.ts"
        }
    ]
}